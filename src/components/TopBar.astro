---
interface Props {
    discount: string;
}

const { discount} = Astro.props
---

<div class="w-full py-3 px-4 bg-gray-900 text-white mx-auto">
  <div class="container mx-auto px-4 flex items-center justify-between">
    
    <div class="flex items-center gap-x-2">
       <p class="bg-[#F3DE6D] text-gray-900 font-medium px-7 py-2  text-lg rotate-[-3deg]">Black</p>
       <h2 class="text-xl font-semibold">Friday</h2>   
    </div>

    <div class="flex items-center gap-x-1">
      <p class="font-medium text-sm">Up to</p>
      <p class="text-[#EBC80C] text-4xl font-bold">{ discount }%</p>
      <p class="font-medium text-lg">OFF</p>
    </div>

    <div>
     <button class="px-7 py-2 bg-[#EBC80C] uppercase font-medium text-gray-900 flex items-center gap-x-2 text-lg rounded">
        shop now
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
          </svg>
          
    </button>
    </div>

    <div class="bg-[#303639] p-2 rounded cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>          
    </div>
  </div>
</div>