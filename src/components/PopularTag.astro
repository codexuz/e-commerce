---
var tags = [
    { name: 'Game', checked: false},
    { name: 'iPhone', checked: false},
    { name: 'TV', checked: false},
    { name: 'Asus Laptops', checked: false},
    { name: 'Macbook', checked: false},
    { name: 'SSD', checked: false},
    { name: 'Graphics Card', checked: true},
    { name: 'Power Bank', checked: false},
    { name: 'Smart TV', checked: false},
    { name: 'Speaker', checked: false},
    { name: 'Tablet', checked: false},
    { name: 'Microwave', checked: false},
    { name: 'Samsung', checked: false},
    
]
---
<div class="w-full px-1 mt-2">
    <h1 class="text-lg mb-3 font-medium uppercase">Popular Tag</h1>

    <div class="w-full flex flex-wrap items-center gap-1">
        {
            tags.map((tag) => (
            <div class="flex items-center">
                <button class=`${tag.checked ? 'bg-[#FFF3EB] text-[#FA8232] border border-[#FA8232]' : 'bg-white border'} text-sm font-medium px-4 py-2 focus:bg-[#FFF3EB] focus:text-[#FA8232] focus:border-[#FA8232]`>
                    {tag.name}
                </button>
            </div>
            ))
        } 
    </div>
</div>